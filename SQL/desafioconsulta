create table tb_curso (
    id int4 not null,
	nome varchar(255),
    carga_horaria int4,
    valor numeric,
    nota_prevista numeric,
	nota_minima numeric,
    primary key (id)
);

create table tb_turma (
    id int4 not null,
	numero int4,
    inicio date,
    vagas int4,
    curso_id int4,
    primary key (id),
    foreign key (curso_id) references tb_curso
);

create table tb_aluno (
    cpf varchar(255) not null,
    nome varchar(255),
	nascimento date,
    primary key (cpf)
);

create table tb_matricula (
    turma_id int4 not null,
	aluno_id varchar(255) not null,
	data date,
    prestacoes int4,
    primary key (aluno_id, turma_id),
    foreign key (aluno_id) references tb_aluno,
    foreign key (turma_id) references tb_turma
);

create table tb_avaliacao (
    id int4 not null,
    nota numeric,
	data date,
    turma_id int4,
    primary key (id),
    foreign key (turma_id) references tb_turma
);

create table tb_resultado (
    aluno_id varchar(255) not null,
    avaliacao_id int4 not null,
	nota_obtida numeric,
    primary key (aluno_id, avaliacao_id),
    foreign key (aluno_id) references tb_aluno,
    foreign key (avaliacao_id) references tb_avaliacao
);

